<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2>Login</h2>
      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
                  type="name"
                  id="name"
                  name="name"
                  class="form-control"
                  placeholder="Enter Name"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
      <p class="mt-4">Existing User? <a href="/auth/email">login</a></p>
      <p>Forgot Password? <a href="/auth/forgot">Reset</a></p>
      <a class="btn btn-secondary btn-block" href="/auth/login"><- Choose a different login method</a>
    </div>
  </div>
</div>
